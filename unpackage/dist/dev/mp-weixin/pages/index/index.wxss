.decoration-edit {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 0;
  background: #f7f8f9;
  height: calc(100vh - 50px);
  position: relative;
}
.decoration-edit .l,
.decoration-edit .r {
  width: 340px;
  height: 100%;
  padding: 15px 0;
  background: #fff;
}
.decoration-edit .l ._ul {
  margin: 0;
  padding: 0;
}
.decoration-edit .l ._ul ._li {
  width: 80px;
  height: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  cursor: default;
  list-style: none;
  font-size: 14px;
  color: #666;
  float: left;
  margin: 0 10px;
  border-radius: 6px;
  transition: all 0.3s;
  cursor: pointer;
}
.decoration-edit .l ._ul ._li:hover {
  background: #efefef;
}
.decoration-edit .l ._ul ._li ._span {
  display: block;
  font-size: 40px;
  margin-bottom: 8px;
  color: #999;
}
.decoration-edit .l ._ul ._li ._p {
  display: block;
  margin: 0;
  font-size: 12px;
}
.decoration-edit .c {
  width: auto;
  max-width: 400px;
  position: relative;
}
.decoration-edit .c .top-nav {
  position: absolute;
  top: 0;
  background: #fff;
  z-index: 999;
  transition: all 0.3s;
}
.decoration-edit .c .top-nav:hover {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 0 10px #afafaf;
}
.decoration-edit .c .top-nav .tit {
  position: absolute;
  left: 50%;
  bottom: 10px;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.decoration-edit .c .top-nav ._img {
  max-width: 100%;
  image-rendering: -moz-crisp-edges;
  image-rendering: -o-crisp-edges;
  image-rendering: -webkit-optimize-contrast;
  image-rendering: crisp-edges;
  -ms-interpolation-mode: nearest-neighbor;
}
.decoration-edit .c #view-content {
  width: 100%;
  height: 100%;
}
.decoration-edit .c .view-content {
  width: 400px;
  height: 700px;
  background: #f5f5f5;
  overflow-y: auto;
  overflow-x: hidden;
  padding-top: 72px;
  box-shadow: 0 2px 6px #ccc;
}
.decoration-edit .c .view-content::-webkit-scrollbar {
  width: 6px;
}
.decoration-edit .c .view-content::-webkit-scrollbar-thumb {
  background: #dbdbdb;
}
.decoration-edit .c .view-content::-webkit-scrollbar-track {
  background: #f6f6f6;
}
.decoration-edit .c .view-content .item {
  transition: all 0.3s;
  background: #fff;
}
.decoration-edit .c .view-content .item:hover {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
  border-radius: 10px;
  box-shadow: 0 0 10px #afafaf;
}
.decoration-edit .c .view-content .item:hover .el-icon-error {
  display: block;
}
.decoration-edit .c .view-content .item ._div {
  pointer-events: none;
}
.decoration-edit .c .view-content .item .wait {
  background: #deedff;
  height: 35px;
  text-align: center;
  line-height: 35px;
  font-size: 12px;
  color: #666;
}
.decoration-edit .c .view-content .item .el-icon-error {
  position: absolute;
  right: -10px;
  top: -6px;
  color: red;
  font-size: 25px;
  cursor: pointer;
  display: none;
  z-index: 9999;
}
.decoration-edit .submit-btn {
  position: absolute;
  bottom: 30px;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}

